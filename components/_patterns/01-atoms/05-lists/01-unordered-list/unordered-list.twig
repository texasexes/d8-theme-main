{#
/**
 * Available variables:
 * - unordered_list_content - the content of the unordered_list (typically text)
 *
 * - unordered_list_attributes - array of attribute,value pairs
 *
 * - unordered_list_base_class - the base class name
 * - unordered_list_modifiers - array of modifiers to add to the base classname
 * - unordered_list_blockname - blockname prepended to the base classname
 *
 * Available blocks:
 * - unordered_list_content - used to replace the content of the unordered_list
 *     Example: to insert the image component
 */
#}
{# A unordered_list uses this class along with the blockname whenever it is an element (BEM)#}
{% set unordered_list_base_class = unordered_list_base_class|default('unordered_list') %}

<ul
  {{ bem(unordered_list_base_class, (unordered_list_modifiers), unordered_list_blockname) }}
  {{ add_attributes(unordered_list_attributes) }}
>
  {%- block unordered_list_content -%}
    {{- unordered_list_content -}}
  {%- endblock -%}
</ul>
