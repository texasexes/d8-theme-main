{#
/**
 * Available variables:
 * - button_base_class - the base class name
 * - button_modifiers - array of modifiers to add to the base classname
 * - button_blockname - blockname prepended to the base classname
 * - button_attributes - array of attribute,value pairs
 * - button_content - the content of the button (typically text)
 *
 * Available blocks:
 * - button_content - used to replace the content of the button with something other than text
 *   for example: to insert an icon
 */
#}
{# A button uses this class along with the blockname whenever it is an element (BEM)#}
{% set button_base_class = button_base_class|default('txex-button') %}
{# This var is set to prevent add_attributes griping about an empty var #}
{% set button_attributes = button_attributes|default([]) %}

{% import "@atoms/02-form_elements/01-button/button-icons.html" as icons %}

<button
  {{ bem(button_base_class, (button_modifiers), button_blockname) }}
  {{ add_attributes(button_attributes) -}}
>
  {% if 'search' in button_modifiers %}
    {{ icons.search_icon }}
  {% elseif  'reset' in button_modifiers %}
    {{ icons.reset_icon }}
  {% endif %}
  {%- block button_content -%}
    {{- button_content -}}
  {%- endblock -%}
</button>
