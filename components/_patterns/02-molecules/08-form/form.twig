{#
/**
 * Available variables:
 * - form_base_class - the base class name
 * - form_modifiers - array of modifiers to add to the base classname
 * - form_blockname - blockname prepended to the base classname
 * - form_attributes - array of attribute,value pairs
 * - form_children - optional additional rendered forms (typically empty)
 *
 * Available blocks:
 * - form_content_block - used to add content as a sibling of the form
 */
#}

{# An form uses this class along with the blockname whenever it is an form (BEM)#}
{% set form_base_class = form_base_class|default('form') %}
{# This var is set to prevent add_attributes griping about an empty var #}
{% set form_attributes = form_attributes|default([]) %}

<form
 {{ bem(form_base_class, (form_modifiers), form_blockname) }}
 {{ add_attributes(form_attributes) -}}
>
{%- block form_content_block -%}
  {{ form_children }}
{%- endblock -%}
</form>
