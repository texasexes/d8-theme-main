{% extends "field.html.twig" %}
{% set attributes = attributes.addClass('field_txex_link_03') %}

{% block item_block %}

  {% set linkAttributes = [] %}
  {% set linkAttributes = linkAttributes|merge({"href" : (item.content['#url']|render)}) %}
  {% if item.attributes %}
    {% set linkAttributes = linkAttributes|merge(item.attributes) %}
  {% endif %}

  {% include "@atoms/01-links/link/link.twig" with {
    "link_content": item.content['#title'],
    "link_attributes": linkAttributes,
  } %}

{% endblock item_block%}
