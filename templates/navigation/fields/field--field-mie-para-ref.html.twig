

{% if label_hidden %}
  {% if multiple %}
    <div{{ attributes }}>
  {% endif %}

  {% for item in items %}
  {% block item_block %}
    <div{{ item.attributes.addClass('flexbox--paragraph-wrapper') }}>{{ item.content }}</div>
  {% endblock %}
  {% endfor %}

  {% if multiple %}
    </div>
  {% endif %}

{% else %}
  <div{{ attributes }}>

    {% block field_label %}
      {% include "@atoms/03-text/01-heading/_heading.twig" with {
        "heading_content": label,
        "heading_attributes": title_attributes,
        "heading_level": '2'
      } %}
    {% endblock %}

    {% if multiple %}
    <div>
    {% endif %}

    {% for item in items %}
    {{ block('item_block')}}
    {% endfor %}

    {% if multiple %}
    </div>
    {% endif %}

  </div>
{% endif %}
