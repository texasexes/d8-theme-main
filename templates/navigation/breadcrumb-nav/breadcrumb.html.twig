{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}
{% if breadcrumb %}
  <nav role="navigation" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
    <ol>
    {% for item in breadcrumb %}
      <li>
        {% if item.url %}
          <a href="{{ item.url }}">{{ item.text }}</a>
        {% else %}
          {{ item.text }}
        {% endif %}
      </li>
      <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 4.6 7.9" height="100%" width="100%">
        <path d="M4.5,4.1L0.8,7.8c0,0-0.1,0.1-0.2,0.1s-0.1,0-0.2-0.1L0.1,7.4C0,7.3,0,7.3,0,7.2C0,7.1,0,7,0.1,7l3.1-3.1
        L0.1,0.9C0,0.8,0,0.7,0,0.7s0-0.1,0.1-0.2l0.4-0.4c0,0,0.1-0.1,0.2-0.1s0.1,0,0.2,0.1l3.6,3.6c0,0,0.1,0.1,0.1,0.2S4.5,4.1,4.5,4.1
        z"/>
      </svg>
    {% endfor %}
    </ol>
  </nav>
{% endif %}
