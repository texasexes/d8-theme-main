{% extends  "node.html.twig" %}
{# TODO: If "full" displays were used, setting $page here would not be necessary. #}
{% set page = TRUE %}
{% set attributes = attributes.addClass('event') %}

{% block content %}
  <div{{ content_attributes }}>

    {{ content.field_txex_ref_media_01 }}

    <div class="event-meta">
      {{ label }}

      {{ content.field_txex_timestamp_01 }}

      {{ content.field_txex_address_01 }}
    </div>

    {{ content.field_txex_text_long_summary_01 }}

    {{ content.field_txex_link_01 }}

    {% set url = url('<current>')['#markup']|url_encode %}
    <p>
      <a href="https://www.facebook.com/sharer/sharer.php?u={{ url }}&t={{ node.getTitle() }}"
         onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600');return false;"
         target="_blank" title="Share on Facebook" class="facebook-share">Share on Facebook</a>
    </p>

  </div>
{% endblock content %}
