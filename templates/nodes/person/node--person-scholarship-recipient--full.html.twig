{% if prev %}
  <a style="background: #cb6015; border-radius: 4px; color: #fff; padding: .75em 1.5em; text-decoration: none; margin-right: 15px;" href="/node/{{prev}}"> Prev </a>
{% endif %}
{% if next %}
  <a style="background: #cb6015; border-radius: 4px; color: #fff; padding: .75em 1.5em; text-decoration: none;" href="/node/{{ next }}"> Next </a>
{% endif %}
</div>