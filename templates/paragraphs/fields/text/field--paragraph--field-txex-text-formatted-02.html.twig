{% extends "field.html.twig" %}

{% set attributes = attributes.addClass('clearfix', 'text-formatted') %}

{% set heading_modifiers = heading_modifiers|default([]) %}
{% set heading_modifiers = heading_modifiers|merge({'subtitle' : 'subtitle',}) %}
{% if field_modifiers %}
  {% set heading_modifiers = heading_modifiers|merge(field_modifiers) %}
{% endif %}

{% block item_block %}
  {% if item.content %}
    {% include "@atoms/03-text/01-heading/_heading.twig" with {
      "heading_blockname": field_blockname,
      "heading_attributes": item.attributes,
      "heading_modifiers": heading_modifiers,
      "heading_content": item.content,
      "heading_level": 2,
    } %}
  {% endif %}
{% endblock %}
