<div class="sg-header-styles">
  {% for i in 1..6 %}
    <div class="sg-pattern pl-heading-examples">
      <h3 class="sg-pattern-title">h{{ i }}</h3>
      {% include "@atoms/03-text/01-heading/_heading.twig" with {
        "heading_level": i,
        "heading_content": "This is a Header " ~ i ~ " example",
        "heading_attributes": headings_list_attributes,
        "heading_base_class": headings_list_base_class,
        "heading_modifiers": headings_list_modifiers,
        "heading_blockname": headings_list_blockname,
      } %}
    </div>
  {% endfor %}
</div>
{% if meta %}
  <p> <small>{{ meta.description }}</small> </p>
{% endif %}
